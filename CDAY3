ATM using global variable:


#include<stdio.h>
int pinnumber=1403;
    int pin, balance = 100000, wd,rd,attempts=3;
    int check()
    {
        printf("Welcome to the ATM\n");
    while(attempts>0)
    {
        printf("Enter the PIN :",pin);
        scanf("%d",&pin);
        if(pin==pinnumber)
        {
            printf("The Pin is correct\n");
            printf("Enter the withdrawal amount\n");
            scanf("%d",&wd);
            if(wd<=balance)
            {
              printf("Transaction sucessfull\n");
              balance = balance - wd;
              printf("The remaining balance is %d",balance);
              return 0;
            }}
        else
            {
             printf("Incorrect pin");
          attempts--;
            }
    }
    printf("Card is blocked");
    }
int main()
{
    check();
}









ceil&floor using float:


#include <stdio.h>
#include<math.h>

int main() {
    // Write C code here
    printf("%f\n",ceil(1.1));
    printf("%f\n",ceil(1.9));
    printf("%f\n",floor(1.1));
    printf("%f\n",floor(1.9));


    return 0;
}


Ceil&floor using decimel:


#include <stdio.h>
#include<math.h>

int main() {
    // Write C code here
    printf("%d\n",ceil(1.1));
    printf("%d\n",ceil(1.9));
    printf("%d\n",floor(1.1));
    printf("%d\n",floor(1.9));


    return 0;
}



pow&sqrt:

#include <stdio.h>
#include<math.h>

int main() {
    // Write C code here
    printf("%f\n",ceil(1.1));
    printf("%f\n",ceil(1.9));
    printf("%f\n",floor(1.1));
    printf("%f\n",floor(1.9));
    //sqrt
    printf("%f\n",sqrt(16));
    //pow
    printf("%f\n",pow(5,2));


    return 0;
}






Area using sqrt:

#include <stdio.h>
#include<math.h>

int main() {
    float area,sl;
    printf(" enter the area",area);
    scanf("%f",&area);
    printf(" the side length %f \n",sqrt(area));

    return 0;
}




ARITHMETIC OPERATIONS USING FUNCTION:



#include <stdio.h>

void arthimetic(int a, int b)
{
  int add = a+b;
  int sub = a-b;
  int mul= a*b;
  int div = a/b;
  int mod= a%b;
  printf("addition %d\n", add );
  printf("subraction %d\n",sub);
  printf("multiplication %d\n",mul);
  printf("division %d\n",div);
  printf("modulus %d\n", mod);
  
}
int main() {
     arthimetic(5,10);
     
    

    return 0;
}

